@model IEnumerable<PizzasWebApp.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Count() > 0)
{

    @if (User.Identity.IsAuthenticated)
    {
        <p>
            <a asp-action="Create" class="btn btn-primary">Crea nuova pizza</a>
        </p>
    }




<div class="container-sm text-black">
    <div class="row justify-content-center text-center">
    <h1>Pizze</h1>
@foreach (var item in Model) {
            <div class="col-sm-4 d-flex align-items-stretch my-3">
            <div class="card" style="width: 22rem; min-height: 30rem;">
                    <div class="wrapper">
                        <div class="box">

                            <img src="@Html.DisplayFor(modelItem => item.PictureUrl)" class="card-img-top  rounded mx-auto d-block img-fluid" id="cardpic"alt="pizzafoto">
                            
                        </div>
                    </div>
            <div class="card-header">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            </div>

              <div class="card-body">
            
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
              </div>

                <div class="card-body">
            
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Price) &euro;</p>
              </div>
              <div class="card-footer">

                        @if (User.Identity.IsAuthenticated)
                        {
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"  role="button">Modifica</a>
                        }
                   
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"  role="button">Dettagli</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" role="button">Delete</a>
                        }

              </div>
              
          </div>
    </div>
}
    </div>
</div>

}else{
    <div>Niente da visualizzare qui</div>
}